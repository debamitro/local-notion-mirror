{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src/frontend",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/frontend/*.ts"],
  "exclude": ["node_modules"]
}
